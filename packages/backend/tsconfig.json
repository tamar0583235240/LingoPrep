{
    "compilerOptions": {

    "rootDir": "./src",       // בדרך כלל צריך להצביע לספריית הקוד המקורי (src)
    "outDir": "./dist",       // התוצאה של ההידור תתייצב כאן
    "module": "commonjs",
    "target": "es6",
    "lib": ["ES2020"],
      ///////////////////////////////
      // "target": "ES2020",

      "target": "ES2020",
      "module": "commonjs",
      "lib": ["ES2020"],
      "outDir": "./dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": ["src/**/*", "index.ts"],
    "exclude": ["node_modules", "dist"],
    "ts-node": {
      "esm": false
    }
  }